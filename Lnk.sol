contract LnkToken is Ownable, ERC20 {

    using SafeMath for uint256;

    uint256 public buyFeeRate;
    uint256 public sellFeeRate;
    uint256 public constant BASE_RATE = 10000; 

    address public pair;
    address public feeAddress;
    mapping(address => bool) public feeWhiteList;
    mapping(address => bool) public minters;

    event FeeRatioUpdate(uint8 _type, uint256 _oldRatio, uint256 _newRatio);
    event FeeAddressUpdate(address _oldFeeAddress, address _newAFeeddress);
    event PairUpdate(address _oldPair, address _newPair);
    event SetMinter(address indexed _minter, bool _isMinter);
    event SetWhiteList(address indexed _white, bool _isWhite);


    error TokenInvaildFeeRate();
    error ZeroAddress();
    error TokenExceedsBalance();

    constructor(address initialOwner, address _feeAddress) Ownable(initialOwner) ERC20("Lnk Token", "LNK") {
        if(_feeAddress == address(0)){
            revert ZeroAddress();
        }
        sellFeeRate = 300;

        feeAddress = _feeAddress;
        feeWhiteList[_msgSender()] = true;
    }

    modifier onlyMinter() {
        require(minters[_msgSender()], "Caller is not minter");
        _;
    }


    function setPair(address _pair) external onlyOwner {
        if(_pair == address(0)){
            revert ZeroAddress();
        }
        emit PairUpdate(pair, _pair);

        pair = _pair;
    }

    function setFeeAddress(address _feeAddress) external onlyOwner {
        if(_feeAddress == address(0)){
            revert ZeroAddress();
        }
        emit FeeAddressUpdate(feeAddress, _feeAddress);

        feeAddress = _feeAddress;
       
    }

    function updateFeeRatio(uint8 _type, uint256 _feeRate) external onlyOwner {
        if(_feeRate > BASE_RATE){
           revert TokenInvaildFeeRate();
        }

        uint256 _oldRate;
        if (_type == 0 ){
            _oldRate = buyFeeRate;
            buyFeeRate = _feeRate;
        }else{
            _oldRate = sellFeeRate;
            sellFeeRate = _feeRate;
        }

        emit FeeRatioUpdate(_type, _oldRate, _feeRate);
    }

    function setMinter(address _minter, bool _isMiner) external onlyOwner {
        minters[_minter] = _isMiner;

        emit SetMinter(_minter, _isMiner);
    }

    function setFeeWhiteList(address _white, bool _isWhite) external onlyOwner {
        feeWhiteList[_white] = _isWhite;

        emit SetWhiteList(_white, _isWhite);
    }

   
    function _transfer(address _sender, address _recipient, uint256 _amount) internal override {
        if(_sender == address(0) || _recipient == address(0)){
            revert ZeroAddress();
        }
        
        if(_balances[_sender] < _amount) {
            revert TokenExceedsBalance();
        }
        
        _balances[_sender] = _balances[_sender].sub(_amount);
        
        if (_isExternalTrade(_sender, _recipient)) {
            if (_sender == pair) {
                uint buyFee = _amount.mul(buyFeeRate).div(BASE_RATE);
                
                if(buyFee > 0){
                    _amount = _amount.sub(buyFee);
                    _balances[feeAddress] = _balances[feeAddress].add(buyFee);

                    emit Transfer(_sender, feeAddress, buyFee);
                }
            }
            else if(_recipient == pair){
                uint256 sellFee = _amount.mul(sellFeeRate).div(BASE_RATE);
                if (sellFee > 0) {
                    _amount =_amount.sub(sellFee);
                    _balances[feeAddress] = _balances[feeAddress].add(sellFee);

                    emit Transfer(_sender, feeAddress, sellFee);
                }
            }
        }
        
        _balances[_recipient] = _balances[_recipient].add(_amount);
        
        emit Transfer(_sender, _recipient, _amount);
    }

    function _isExternalTrade(address _from, address _to) internal view returns (bool) {
        return (_from == pair && !feeWhiteList[_to]) || (_to == pair && !feeWhiteList[_from]);
    }

    function mint(address _to, uint256 _amount) external onlyMinter {
        _mint(_to, _amount);
    }

    function burn(uint256 _amount) external {
        _burn(_msgSender(), _amount);
    }

    function burnFrom(address _account, uint256 _amount) external  {
        uint256 decreasedAllowance = allowance(_account, _msgSender()).sub(_amount);

        _approve(_account, _msgSender(), decreasedAllowance);
        _burn(_account, _amount);
    }


}